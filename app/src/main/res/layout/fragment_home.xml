<?xml version="1.0" encoding="utf-8"?>
<!-- 다은 home 레이아웃 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />
            <TextView
                android:id="@+id/md_cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:text="'MD'가 추천하는 다크투어 유적지"
                android:textColor="#000000"
                android:textSize="17dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                android:id="@+id/mainhome_viewpager"
                android:layout_width="411dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"/>
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/homeindi"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="bottom"
                android:padding="10dp"
                app:ci_drawable="@drawable/home_indicator"
                app:ci_gravity="center|right"
                app:ci_height="5dp"
                app:ci_width="5dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/login12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />
            <TextView
                android:id="@+id/rank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:text="사용자가 많이 추천한 코스"
                android:textColor="#000000"
                android:textSize="17dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/login7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />
            <TextView
                android:id="@+id/rank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:text="사용자가 많이 추천한 유적지"
                android:textColor="#000000"
                android:textSize="17dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>